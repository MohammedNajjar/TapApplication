<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:layout_margin="@dimen/_16sdp"
    android:orientation="vertical"
    tools:context=".ui.RMoreFragment">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/admin_setting_iv_logo"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_margin="@dimen/_4sdp"
        android:src="@drawable/logo"
        app:civ_border_color="#FFFFFF" />


    <TextView
        android:id="@+id/admin_setting_tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="@dimen/_20sdp"
        android:layout_margin="@dimen/_4sdp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    <TextView
        android:id="@+id/admin_setting_tv_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_4sdp" />


    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_margin="@dimen/_3sdp"
        android:background="@color/teal_200" />
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_margin="@dimen/_3sdp"
        android:background="@color/teal_200" />


    <androidx.cardview.widget.CardView
        android:id="@+id/admin_setting_tv_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        app:cardCornerRadius="6dp"
        app:cardElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginLeft="@dimen/_16sdp"
                android:layout_marginRight="@dimen/_16sdp"
                android:drawableRight="@drawable/ic_logout"
                android:drawablePadding="8dp"
                android:fontFamily="@font/cairo_bold"
                android:padding="@dimen/_6sdp"
                android:text="Logout"
                android:textColor="@color/purple_700"
                android:textSize="16sp"
                app:drawableTint="@color/purple_700" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        app:cardCornerRadius="6dp"
        app:cardElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/admin_setting_rumh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginLeft="@dimen/_16sdp"
                android:layout_marginRight="@dimen/_16sdp"
                android:drawablePadding="8dp"
                android:fontFamily="@font/cairo_bold"
                android:padding="@dimen/_6sdp"
                android:text="About Rumh"
                android:textColor="@color/purple_700"
                android:textSize="16sp"
                app:drawableTint="@color/purple_700" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        app:cardCornerRadius="6dp"
        app:cardElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/admin_setting_shaghir"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginLeft="@dimen/_16sdp"
                android:layout_marginRight="@dimen/_16sdp"
                android:drawablePadding="8dp"
                android:fontFamily="@font/cairo_bold"
                android:padding="@dimen/_6sdp"
                android:text="About Shaghir"
                android:textColor="@color/purple_700"
                android:textSize="16sp"
                app:drawableTint="@color/purple_700" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/imageView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        app:cardCornerRadius="6dp"
        app:cardElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/admin_setting_call_me"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginLeft="@dimen/_16sdp"
                android:layout_marginRight="@dimen/_16sdp"
                android:drawablePadding="8dp"
                android:fontFamily="@font/cairo_bold"
                android:padding="@dimen/_6sdp"
                android:text="Call Me"
                android:textColor="@color/purple_700"
                android:textSize="16sp"
                app:drawableTint="@color/purple_700" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>